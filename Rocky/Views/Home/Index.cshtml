@model HomeVM
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="text-center">
        <button class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach(var obj in Model.Categories)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@obj.Name.Replace(' ','_')">
                @obj.Name
            </button>
        }
    </div>
    <br />
    <div class="row">
        @foreach(var obj in Model.Products)
        {
            <partial name="_IndividualProductCard" model="obj" />
        }
    </div>

</div>
